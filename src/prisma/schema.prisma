generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int           @id @default(autoincrement())
  firstName String
  lastName  String
  email     String        @unique
  password  String
  createdAt DateTime      @default(now())
  users     User[]        // One admin can create many users
  requests  UserRequest[] // One admin can receive many requests
  projects  Project[]     // One admin can create many projects
}

model User {
  id        Int           @id @default(autoincrement())
  firstName String
  lastName  String
  email     String        @unique
  password  String
  createdAt DateTime      @default(now())
  createdBy Int?          // Foreign key to Admin (nullable for existing users)
  admin     Admin?        @relation(fields: [createdBy], references: [id])
  requests  UserRequest[] // One user can make many requests
  projects  ProjectUser[] // Many-to-many relation with projects
  assignedTasks Task[]    // Tasks assigned to this user
}

model UserRequest {
  id             Int      @id @default(autoincrement())
  userId         Int
  adminId        Int
  requestType    String   // 'firstName', 'lastName', 'email', 'password'
  currentValue   String?  // Current value (not shown for password)
  requestedValue String?  // Requested value (not shown for password)
  status         String   @default("pending") // 'pending', 'approved', 'rejected'
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  admin          Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([adminId])
  @@index([status])
}

model Project {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  status      String        @default("active") // 'active', 'inactive', 'completed'
  createdBy   Int           // Foreign key to Admin
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  admin       Admin         @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  users       ProjectUser[] // Many-to-many relation with users
  tasks       Task[]        // Tasks in this project

  @@index([createdBy])
  @@index([status])
}

model ProjectUser {
  id         Int      @id @default(autoincrement())
  projectId  Int
  userId     Int
  assignedAt DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId]) // Prevent duplicate assignments
  @@index([projectId])
  @@index([userId])
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("pending") // 'pending', 'accepted', 'in-progress', 'done'
  type        String   @default("basic") // 'basic', 'form'
  formSchema  Json?    // Stores the form definition for 'form' type
  submissionData Json? // Stores user submission for 'form' type
  projectId   Int
  assignedTo  Int?     // Nullable, task might not be assigned yet
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?    @relation(fields: [assignedTo], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([assignedTo])
}
